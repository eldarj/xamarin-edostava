<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Easyfood_Xamarin.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Style="{StaticResource Container}">
            <Label x:Name="UsernameError" IsVisible="False" TextColor="Red" FontSize="11"/>
            <Entry x:Name="inputUsername" Placeholder="Username" Text="almasa" />
            <Label x:Name="PasswordError" IsVisible="False" TextColor="Red" FontSize="11"/>
            <Entry x:Name="inputPassword" Placeholder="Password" Text="almasa" IsPassword="True" />
            <Button x:Name="btnLogin" Text="Login" Clicked="BtnLogin_Clicked" FontAttributes="Bold"/>
            <Label Text="Nemate račun?" HorizontalOptions="Center"/>
            <Button x:Name="btnRegistracija" Text="Registrujte se" Clicked="BtnRegistracija_Clicked" FontAttributes="Bold"/>
            <ActivityIndicator x:Name="loaderIndicator" Color="Red" IsRunning="False" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>